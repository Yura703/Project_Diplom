        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Variant1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Variant2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Variant3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Var)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Questions_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Questions_id">Details</a> |
