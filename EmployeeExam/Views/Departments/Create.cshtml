@model EmployeeExam.Data.Entities.Department

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить</h1>

<h4>Подразделение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="dep_name" class="control-label"></label>
                <input asp-for="dep_name" class="form-control" />
                <span asp-validation-for="dep_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dep_abvr" class="control-label"></label>
                <input asp-for="dep_abvr" class="form-control" />
                <span asp-validation-for="dep_abvr" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Head" /> @Html.DisplayNameFor(model => model.Head)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">К списку</a>
</div>

